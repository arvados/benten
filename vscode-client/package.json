{
	"name": "benten-cwl",
	"publisher": "sbg-rabix",
	"displayName": "CWL (Rabix/Benten)",
	"description": "Autocomplete, code validation and more for CWL documents",
	"version": "2019.4.25-alpha",
	"preview": true,
	"icon": "benten-icon-128px.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "light"
	},
	"readme": "Readme.md",
	"author": {
		"name": "Seven Bridges/Rabix"
	},
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/rabix/benten.git"
	},
	"bugs": {
		"url": "https://github.com/rabix/benten/issues",
		"email": "rabix@sbgenomics.com"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready",
		"CWL",
		"common workflow language",
		"bioinformatics"
	],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:cwl"
	],
	"contributes": {
		"languages": [
			{
				"id": "cwl",
				"extensions": [
					".cwl"
				],
				"aliases": [
					"CWL",
					"cwl",
					"CommonWorkflowLanguage",
					"CommonWL"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "cwl",
				"scopeName": "source.cwl",
				"path": "./cwl.tmGrammar.json",
				"embeddedLanguages": {
					"meta.embedded.block.javascript": "javascript"
				}
			}
		]
	},
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"install": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1"
	},
	"devDependencies": {
		"@types/node": "^6.0.40",
		"mocha": "^2.3.3",
		"typescript": "^2.3.4",
		"vscode": "^1.1.33"
	}
}
