{
	"name": "benten-cwl",
	"publisher": "sbg-rabix",
	"displayName": "CWL (Rabix/Benten)",
	"description": "Autocomplete, code validation and more for CWL documents",
	"version": "2019.11.27",
	"preview": false,
	"icon": "benten-icon-128px.png",
	"galleryBanner": {
		"color": "#11A7A7",
		"theme": "light"
	},
	"readme": "Readme.md",
	"author": {
		"name": "Rabix (Seven Bridges)"
	},
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/rabix/benten.git"
	},
	"bugs": {
		"url": "https://github.com/rabix/benten/issues",
		"email": "rabix@sbgenomics.com"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"CWL",
		"common workflow language",
		"bioinformatics"
	],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:cwl"
	],
	"contributes": {
		"languages": [
			{
				"id": "cwl",
				"extensions": [
					".cwl"
				],
				"aliases": [
					"CWL",
					"cwl",
					"CommonWorkflowLanguage",
					"CommonWL"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "cwl",
				"scopeName": "source.cwl",
				"path": "./cwl.tmGrammar.json",
				"embeddedLanguages": {
					"meta.embedded.block.javascript": "javascript"
				}
			}
		],
		"commands": [
			{
				"command": "cwl.show_graph",
				"title": "CWL preview",
				"category": "Benten",
				"icon": {
					"light": "./include/PreviewOnRightPane_16x.svg",
					"dark": "./include/PreviewOnRightPane_16x_dark.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "cwl.show_graph",
					"when": "editorLangId == cwl",
					"alt": "cwl.show_graph",
					"group": "navigation"
				}
			]
		}
	},
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"install": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1",
		"ts-md5": "^1.2.4"
	},
	"devDependencies": {
		"@types/node": "^6.0.40",
		"@types/js-yaml": "3.11.1",
		"mocha": "^2.3.3",
		"typescript": "^2.3.4",
		"vscode": "^1.1.33"
	}
}
